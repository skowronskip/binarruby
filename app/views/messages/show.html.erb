<h1><%= @message.content %></h1>
<% if !@message.user.first_name.blank? && !@message.user.last_name.blank? %>
    <h3> <%= @message.user.first_name %> <%= @message.user.last_name %>
<% end %>
<h5><%= @message.user.email %></h5>

<h3>Comments</h3>
<%= render partial: 'comments', collection: @message.comments, as: :comment %>
<%= link_to 'Edit message', edit_message_path(@message.id) %> <br>
<%= link_to 'Back to all messages', messages_path %>
