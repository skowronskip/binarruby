<div class="container mt-4">
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2">
      <% if @message_id.nil? %>
        <%= link_to 'Back to all messages', messages_path, class: 'btn btn-dark' %>
        <%= link_to 'See all comments', comments_path, class: 'btn btn-dark' %>
        <h1 class="mt-4">List of all comments</h1>
      <% else %>
      <%= link_to 'Back to all messages', messages_path, class: 'btn btn-dark' %>
      <%= link_to 'See all comments', comments_path, class: 'btn btn-dark' %>
      <%= link_to 'Back to the message', Message.find(@message_id), class: 'btn btn-info' %>
        <h1 class="mt-4">List of all comments for message: <%= @message_id %> </h1>
      <% end %>
      <ul class="list-group">
        <% @comments.each do |comment| %>
        <li class="list-group-item">
          <div class="row">
            <div class="col-6 col-md-8 word-wrap">
              <div class="avatar-30">
                <% if comment.user.picture.present? %>
                  <%= image_tag(comment.user.picture.url) %>
                <% else %>
                  <%= image_tag('default-avatar.png') %>
                <% end %>
                <strong>
                  <% if comment.user.first_name.blank? && comment.user.last_name.blank? %>
                    <%= comment.user.email %>
                  <% else %>
                    <%= comment.user.first_name %> <%= comment.user.last_name %>
                  <% end %>
                  :
                </strong>
                <%= comment.content %>
              </div>
            </div>
            <div class="col-6 col-md-4 text-right">
              <%= link_to 'Show', comment, class: 'btn btn-primary btn-sm' %> 
              <% if comment.user == current_user %>
                <%= link_to 'Edit', edit_comment_path({ id: comment.id }), class: 'btn btn-info btn-sm' %>
                <%= link_to 'Delete', comment, method: :delete, class: 'btn btn-danger btn-sm' %>
              <% end %>
            </div>
          </div>          
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>