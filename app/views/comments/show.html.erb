<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
        <%= link_to 'See all messages', messages_path, class: 'cvierkacz-button-dark' %>
        <%= link_to 'See all comments', comments_path, class: 'cvierkacz-button-dark' %>
        <%= link_to 'Back to the message', @comment.message, class: 'cvierkacz-button' %>
            <div class="card mt-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-12">
                      <h4><%= @comment.content %></h4>
                      <div class="avatar-30">
                        <% if @comment.user.picture.present? %>
                          <%= image_tag(@comment.user.picture.url) %>
                        <% else %>
                          <%= image_tag('default-avatar.png') %>
                        <% end %>
                        <strong>
                          <% if @comment.user.first_name.blank? && @comment.user.last_name.blank? %>
                            <%= @comment.user.email %>
                          <% else %>
                            <%= @comment.user.first_name %> <%= @comment.user.last_name %>
                          <% end %>
                        </strong>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <div class="row">
                    <div class="col-12 col-md-8">
                      <% if @comment.user == current_user %>
                        <%= link_to 'Edit', edit_comment_path, class: 'cvierkacz-button cvierkacz-button-small' %>
                        <%= link_to 'Delete', @comment, method: :delete, class: 'cvierkacz-button-red cvierkacz-button-small' %>
                      <% end %>
                    </div>
                    <div class="col-12 col-md-4 text-right">
                      <p class="comment-date"><%=  @comment.created_at.in_time_zone("CET").strftime("%F %T") %></p>
                    </div>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>
